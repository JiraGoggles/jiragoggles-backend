{
    "key": "jira-goggles",
    "name": "JIRA Goggles",
    "description": "An add-on that helps managing JIRA projects",
    "baseUrl": "{{localBaseUrl}}",
    "links": {
        "self": "{{localBaseUrl}}/atlassian-connect.json",
        "homepage": "{{localBaseUrl}}/atlassian-connect.json"
    },
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        // atlassian-connect-express expects this route to be configured to manage the installation handshake
        "installed": "/installed"
    },
    "scopes": [
        "READ",
        "ACT_AS_USER"
    ],
    "modules": {
        "generalPages": [
            {
                "key": "jira-goggles",
                "location": "system.top.navigation.bar",
                "name": {
                    "value": "Jira Goggles"
                },
                "url": "/main",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
        ],
        "webItems": [
            {
                "url": "/main?issueKey={issue.key}",
                "location": "jira.issue.tools",
                "weight": 200,
                "tooltip": {
                    "value": "Jira Goggles"
                },
                "conditions": [
                    {
                        "condition": "user_is_logged_in"
                    },
                    {
                        "condition": "is_sub_task",
                        "invert": true
                    }
                ],
                "key": "issue-switch-goggles",
                "name": {
                    "value": "See in Goggles"
                }
            }
        ]
    }
}