{
    "development": {
        "port": 3000,
        "errorTemplate": false,
        "localBaseUrl": "https://jiragoggles.herokuapp.com",
        "store": {
            "adapter": "jugglingdb",
            "type": "sqlite3",
            "database": "store.db"
        }
    },
    "production": {
        "port": "$PORT",
        "errorTemplate": false,
        "localBaseUrl": "https://jiragoggles.herokuapp.com",
        "store": {
            "adapter": "jugglingdb",
            "type": "sqlite3",
            "database": "store.db"
        },
        "whitelist": [
            "*.jira-dev.com",
            "*.atlassian.net",
            "*.atlassian.com",
            "*.jira.com"
        ],
        "maxTokenAge": 86400
    },
    "product": "jira"
}
